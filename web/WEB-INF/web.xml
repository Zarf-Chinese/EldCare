<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
 
    <servlet>
        <servlet-name>eldQueAllServlet</servlet-name>
        <servlet-class>controller.elder.eldQueAllServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controller.user.userLoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>userSignUpServlet</servlet-name>
        <servlet-class>controller.user.userSignUpServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>eldQueAllServlet</servlet-name>
        <url-pattern>/eldQueAll.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>userSignUpServlet</servlet-name>
        <url-pattern>/signUp.do</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>/login.html</welcome-file>
        <!--        写sevlet时不加/-->
        <!--        <welcome-file>/queAllStu.do</welcome-file>-->
    </welcome-file-list>
</web-app>