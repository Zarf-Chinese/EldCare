<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
<!-- 老人-->
    <servlet>
        <servlet-name>eldQueAllServlet</servlet-name>
        <servlet-class>controller.elder.eldQueAllServlet</servlet-class>
    </servlet>
<!--  用户  -->
    <servlet>
        <servlet-name>userLoginServlet</servlet-name>
        <servlet-class>controller.user.userLoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>userSignUpServlet</servlet-name>
        <servlet-class>controller.user.userSignUpServlet</servlet-class>
    </servlet>
<!--    护士-->
    <servlet>
        <servlet-name>nurAddComServlet</servlet-name>
        <servlet-class>controller.nurse.nurAddComServlet</servlet-class>
    </servlet>

    <!--    老人-->
    <servlet-mapping>
        <servlet-name>eldQueAllServlet</servlet-name>
        <url-pattern>/eldQueAll.do</url-pattern>
    </servlet-mapping>
<!--    用户-->
    <servlet-mapping>
        <servlet-name>userLoginServlet</servlet-name>
        <url-pattern>/login.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>userSignUpServlet</servlet-name>
        <url-pattern>/signUp.do</url-pattern>
    </servlet-mapping>
<!--    护士-->
    <servlet-mapping>
        <servlet-name>nurAddComServlet</servlet-name>
        <url-pattern>/nurAddCom.do</url-pattern>
    </servlet-mapping>
<!--    此处修改网站主页-->
    <welcome-file-list>
        <welcome-file>/login.html</welcome-file>
        <!--        写sevlet时不加/-->
        <!--        <welcome-file>/queAllStu.do</welcome-file>-->
    </welcome-file-list>
</web-app>